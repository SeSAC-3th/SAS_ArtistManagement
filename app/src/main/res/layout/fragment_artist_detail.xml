<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.artist.detail.ArtistDetailFragment">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tb_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_schedule_detail"
        app:title="@string/artist_detail_title"
        app:titleTextAppearance="@style/title"
        app:titleTextColor="?attr/colorOnSurface" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guideline_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:src="@drawable/dummy_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_artist" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="224dp" />

<!--    filed   -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name"
        style="@style/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guideline_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:text="@string/artist_detail_category_name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv"
        app:layout_constraintTop_toBottomOf="@id/tb_artist" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/artist_name"
        style="@style/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:text="김채원"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/tb_artist" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nickname"
        style="@style/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guideline_margin"
        android:layout_marginTop="@dimen/tiny_margin"
        android:text="@string/artist_detail_category_nickname"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/artist_nickname"
        style="@style/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/tiny_margin"
        android:text="르세라핌"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/artist_name" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/birth"
        style="@style/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guideline_margin"
        android:layout_marginTop="@dimen/tiny_margin"
        android:text="@string/artist_detail_category_birth"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv"
        app:layout_constraintTop_toBottomOf="@id/nickname" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/artist_birth"
        style="@style/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/tiny_margin"
        android:text="00.00.00"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/artist_nickname" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/job"
        style="@style/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guideline_margin"
        android:layout_marginTop="@dimen/tiny_margin"
        android:text="@string/artist_detail_category_job"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv"
        app:layout_constraintTop_toBottomOf="@id/birth" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/artist_job"
        style="@style/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/tiny_margin"
        android:text="가수"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/artist_birth" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/gender"
        style="@style/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guideline_margin"
        android:layout_marginTop="@dimen/tiny_margin"
        android:text="@string/artist_detail_category_gender"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv"
        app:layout_constraintTop_toBottomOf="@id/job" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/artist_gender"
        style="@style/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/tiny_margin"
        android:text="여자"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/artist_job" />


<!--    Schedule    -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/schedule_title"
        style="@style/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guideline_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:text="@string/artist_detail_schedule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gender" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guideline_margin"
        android:layout_marginTop="@dimen/tiny_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/schedule_title" />

<!--    evaluate -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/evaluate_title"
        style="@style/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guideline_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:text="@string/artist_detail_eval"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_schedule" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/large_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/evaluate_title" />

</androidx.constraintlayout.widget.ConstraintLayout>